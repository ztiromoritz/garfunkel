{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "outputSourceFiles": false
        },
        "staticFiles": {
            "include": ["./assets/"]
        }
    },
    "opts" :{
	"template": "node_modules/ink-docstrap/template",
	"readme" : "README.md",
	"destination": "./docs/"
    }
}
