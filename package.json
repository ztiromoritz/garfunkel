{
	"name": "garfunkel",
	"main": "./garfunkel.js",
	"version": "0.1.1",
	"description": "2D geometry toolbox",
	"scripts": {
		"test": "mocha",
		"test-cov": "mocha -R html-cov test/coverage/blanket-wrapper.js > test/coverage/coverage.html",
		"lint": "jshint **.js;true",
		"build": "(echo '/*!' ; cat ./LICENSE ; echo '*/' ; browserify garfunkel.js) > build/garfunkel.js",
		"doc": "yuidoc --no-sort --no-code"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/ztiromoritz/garfunkel.git"
	},
	"devDependencies": {
		"mocha": "^5.1.1",
		"chai": "^4.1.2",
		"sinon": "^5.0.7",
		"browserify": "latest",
		"jshint": "latest",
		"blanket": "latest"
	},
	"licenses": [
		{
			"type": "MIT",
			"url": "https://raw.githubusercontent.com/ztiromoritz/garfunkel/master/LICENSE"
		}
	],
	"config": {
		"blanket": {
			"pattern": [
				"src"
			],
			"data-cover-never": [
				"node_modules"
			]
		}
	},
	"dependencies": {
		"esdoc": "^1.1.0",
		"esdoc-standard-plugin": "^1.0.0"
	}
}
