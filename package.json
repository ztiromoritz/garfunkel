{
  "name": "garfunkel",
  "private": false,
  "version": "0.3.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "dist/main.d.ts",
  "scripts": {
		"start":"npm run dev",
    "dev": "npx concurrently --kill-others \"npm run dev:vite\" \"npm run dev:doc\" \"npm run dev:test\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "doc": "npx typedoc src/main.ts",
    "upgrade": "npx npm-check-updates -u --format group",
    "dev:vite": "vite",
    "dev:doc": "npx typedoc --watch src/main.ts",
    "dev:test": "vitest --ui --open false"
  },
  "main": "./dist/garfunkel.umd.js",
  "module": "./dist/garfunkel.es.js",
  "exports": {
    ".": {
      "import": "./dist/garfunkel.es.js",
      "require": "./dist/garfunkel.umd.js"
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@vitest/ui": "^1.0.4",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-multiple-assets": "^1.2.9",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.1",
    "codemirror": "^6.0.1",
    "petite-vue": "^0.4.1"
  }
}
